{
    "version": "0.2.0",
    "configurations": [
      {
      "type": "node",
      "request": "launch",
      "name": "Launch Node-red",
      "runtimeExecutable": "npx", 
      "runtimeArgs": [
        "node-red",
        "-s", 
        "${workspaceFolder}/.vscode/settings.js"
      ],
      "cwd": "${env:HOME}",
        "env": {
          "NO_UPDATE_NOTIFIER": "1",
          "DEBUG": "*",
          "NODE_RED_DBUS_ADDRESS": "10.230.1.63:78",
          // "NODE_RED_DBUS_ADDRESS": "${env:NODE_RED_DBUS_IP}"
        },
        "envFile": "${workspaceFolder}/.env"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Current File",
        "program": "${file}"
      },
      { "type": "node", "request": "attach", "name": "Attach to Process", "processId": "${command:PickProcess}" } 
      
    ]
  }
